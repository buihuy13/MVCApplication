@model Category

@{
    ViewData["Title"] = "Category Details";
}

<h1>@ViewData["Title"]</h1>

<hr />
<div>
    <dl class="row">
        <dt class="col-sm-3">
            @Html.DisplayNameFor(m => m.Title)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(m => m.Title)
        </dd>
        <dt class="col-sm-3">
            @Html.DisplayNameFor(m => m.Content)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(m => m.Content)
        </dd>
        <dt class="col-sm-3">
            @Html.DisplayNameFor(m => m.Slug)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(m => m.Slug)
        </dd>
        <dt class="col-sm-3">
            @Html.DisplayNameFor(m => m.ParentCategory)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(m => m.ParentCategory)
        </dd>
    </dl>

    <p>
        <a asp-action="Edit" class="btn btn-success" asp-route-id="@Model.Id">Edit</a>
        <a asp-action="Index" class="btn btn-info">Back</a>
    </p>
</div>